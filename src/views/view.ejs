<%- include("partials/header") %>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-6 my-3">
                <div class="card">
                    <img src="../uploads/<%= image.path %>" class="card-img-top" alt="<%= image.name %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= image.name %></h5>
                        <p class="card-text"><%= image.description %></p>
                        <p class="card-text"><span>Type: </span> <%= image.mimetype %></p>
                        <p class="card-text"><span>Size: </span> <%= image.size %></p>
                    </div>
                    <div class="card-footer">
                        <a href="/remove/<%= image._id %>" class="btn btn-block btn-danger">Remove</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- include("partials/footer") %>